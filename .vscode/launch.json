{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "BMP Launch",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/gateway.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "device": "rp2040",
            "numberOfProcessors": 2,
            "BMPGDBSerialPort": "/dev/cu.usbmodem316F378F31321",
            "runToEntryPoint": "main"
        },
        {
            "name": "BMP Attach",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/gateway.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "device": "rp2040",
            "numberOfProcessors": 2,
            "breakAfterReset": true,
            "BMPGDBSerialPort": "/dev/cu.usbmodem316F378F31321",
        },
